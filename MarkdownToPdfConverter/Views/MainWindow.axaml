<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MarkdownToPdfConverter.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="MarkdownToPdfConverter.Views.MainWindow"
        Icon="/Assets/uh83o-7z6s2-001.ico"
        Title="Markdown To PDF Converter"
        MinWidth="800" MinHeight="600"
        Background="#1E1E1E">

	<Window.DataContext>
		<vm:MainViewModel />
	</Window.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<!-- 导航条区域 -->
			<RowDefinition Height="*" />
			<!-- 内容区域 -->
			<RowDefinition Height="Auto" />
			<!-- 状态信息 -->
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- 改进后的导航条 -->
		<Border Grid.Row="0" Grid.Column="0"
                Background="#252525"
                BorderBrush="#333333"
                BorderThickness="0,0,0,1"
                Padding="0,5">
			<StackPanel Orientation="Horizontal"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
				<!-- 上传按钮 -->
				<Button Content="上传 Markdown"
                        Command="{Binding UploadFileCommand}"
                        Margin="10,0"
                        Padding="20,10"
                        CornerRadius="4"
                        FontSize="14"
                        FontWeight="Medium">
					<Button.Styles>
						<Style Selector="Button">
							<Setter Property="Background" Value="Transparent"/>
							<Setter Property="Foreground" Value="#D0D0D0"/>
							<Setter Property="BorderBrush" Value="#444444"/>
							<Setter Property="BorderThickness" Value="1"/>
						</Style>
						<Style Selector="Button:pointerover">
							<Setter Property="Background" Value="#3A3A3A"/>
							<Setter Property="Foreground" Value="White"/>
							<Setter Property="BorderBrush" Value="#555555"/>
						</Style>
						<Style Selector="Button:pressed">
							<Setter Property="Background" Value="#2A2A2A"/>
							<Setter Property="Foreground" Value="#C0C0C0"/>
						</Style>
					</Button.Styles>
				</Button>

				<!-- 分隔线 -->
				<Rectangle Width="1" Height="20" Fill="#444444" Margin="5,0"/>

				<!-- 转换按钮 -->
				<Button Content="转换 PDF"
                        Command="{Binding ConvertToPdfCommand}"
                        IsEnabled="{Binding CanConvert}"
                        Margin="10,0"
                        Padding="20,10"
                        CornerRadius="4"
                        FontSize="14"
                        FontWeight="Medium">
					<Button.Styles>
						<Style Selector="Button">
							<Setter Property="Background" Value="#03A9F4"/>
							<Setter Property="Foreground" Value="White"/>
							<Setter Property="BorderBrush" Value="Transparent"/>
						</Style>
						<Style Selector="Button:pointerover">
							<Setter Property="Background" Value="#0288D1"/>
						</Style>
						<Style Selector="Button:pressed">
							<Setter Property="Background" Value="#0277BD"/>
						</Style>
						<Style Selector="Button:disabled">
							<Setter Property="Background" Value="#555555"/>
							<Setter Property="Foreground" Value="#888888"/>
						</Style>
					</Button.Styles>
				</Button>

				<!-- 分隔线 -->
				<Rectangle Width="1" Height="20" Fill="#444444" Margin="5,0"/>

				<!-- 帮助按钮 -->
				<Button Content="帮助"
                        Margin="10,0"
                        Padding="20,10"
                        CornerRadius="4"
                        FontSize="14"
                        FontWeight="Medium">
					<Button.Styles>
						<Style Selector="Button">
							<Setter Property="Background" Value="Transparent"/>
							<Setter Property="Foreground" Value="#D0D0D0"/>
							<Setter Property="BorderBrush" Value="#444444"/>
							<Setter Property="BorderThickness" Value="1"/>
						</Style>
						<Style Selector="Button:pointerover">
							<Setter Property="Background" Value="#3A3A3A"/>
							<Setter Property="Foreground" Value="White"/>
						</Style>
						<Style Selector="Button:pressed">
							<Setter Property="Background" Value="#2A2A2A"/>
						</Style>
					</Button.Styles>
				</Button>
			</StackPanel>
		</Border>

		<!-- 内容区域 -->
		<TabControl Grid.Row="1" Grid.Column="0" Margin="20" Background="#2E2E2E" BorderBrush="#444444" BorderThickness="1">
			<!-- 文件上传 Tab -->
			<TabItem Header="文件上传" Background="#333333" Foreground="White">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<StackPanel Margin="20" Spacing="10">
						<TextBlock Text="已选择文件:" FontWeight="Bold" Foreground="White" FontSize="18"/>
						<Border Background="#444444" CornerRadius="8" Padding="10">
							<TextBlock Text="{Binding SelectedFilePath}" TextWrapping="Wrap" Foreground="LightGray" FontSize="16"/>
						</Border>
					</StackPanel>
				</ScrollViewer>
			</TabItem>

			<!-- 编辑 Markdown Tab -->
			<TabItem Header="编辑 Markdown" Background="#333333" Foreground="White">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<StackPanel Margin="20" Spacing="10">
						<TextBlock Text="编辑内容:" FontWeight="Bold" Foreground="White" FontSize="18"/>
						<Border Background="#444444" CornerRadius="8" Padding="10">
							<TextBox Text="{Binding MarkdownText}" AcceptsReturn="True"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" MinHeight="400"
                                     Background="Transparent" Foreground="White" BorderBrush="Transparent"
                                     Padding="10" FontSize="16">
								<TextBox.Styles>
									<Style Selector="TextBox">
										<Setter Property="Effect">
											<DropShadowEffect BlurRadius="5" OffsetX="2" OffsetY="2" Color="#20000000"/>
										</Setter>
									</Style>
									<Style Selector="TextBox:pointerover">
										<Setter Property="Background" Value="#3E3E3E"/>
										<Setter Property="Effect">
											<DropShadowEffect BlurRadius="10" OffsetX="4" OffsetY="4" Color="#40000000"/>
										</Setter>
									</Style>
									<Style Selector="TextBox:focused">
										<Setter Property="Background" Value="#3E3E3E"/>
										<Setter Property="Effect">
											<DropShadowEffect BlurRadius="10" OffsetX="4" OffsetY="4" Color="#60000000"/>
										</Setter>
									</Style>
								</TextBox.Styles>
							</TextBox>
						</Border>
					</StackPanel>
				</ScrollViewer>
			</TabItem>
		</TabControl>

		<!-- 状态信息 -->
		<Border Grid.Row="2" Grid.Column="0"
                VerticalAlignment="Center"
                Margin="18,5,18,20"
                CornerRadius="8"
                Background="#2E2E2E"
                BorderBrush="#555555"
                BorderThickness="1"
                Padding="10">
			<TextBlock Text="{Binding StatusMessage}"
                       Foreground="White"
                       FontSize="16"
                       FontFamily="Segoe UI"
                       FontWeight="SemiBold"/>
		</Border>
	</Grid>
</Window>
